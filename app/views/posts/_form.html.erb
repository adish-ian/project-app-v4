<div class="col-xl-4 col-md-6 col-sm8 col-10" style="margin: auto; background-color: #FDE8B6; padding: 20px;">
<%= form_with(model: post) do |form| %>
<h1>New post</h1>
  <div>
    <% invalid = post.errors.include?(:title) %>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: "form-control" %>
    <% if invalid %>
    <p style="color: red">
      <%= post.errors.full_messages_for(:title).join(" ,") %></p>
    <% end %>
    </div>

    <div>
      <% invalid = post.errors.include?(:description) %>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class: "form-control" %>
      <% if invalid %>
    <p style="color: red">
      <%= post.errors.full_messages_for(:description).join(" ,") %></p>
    <% end %>
    </div>

    <div>
      <% invalid = post.errors.include?(:keywords) %>
      <%= form.label :keywords, style: "display: block" %>
      <%= form.text_field :keywords, class: "form-control" %>
      <% if invalid %>
    <p style="color: red">
      <%= post.errors.full_messages_for(:keywords).join(" ,") %></p>
    <% end %>
    </div> <br>
    
      <%= form.file_field :images, multiple:true %><br><hr/>

    <div>
      <%= form.submit class: "btn btn-primary col-12" %>
    </div> <br>
  
<% end %>
</div>