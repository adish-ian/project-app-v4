<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col-12 text-center" style="padding: 20px; background-color: #f2f2f2;">
    <h1><%= @user.name %></h1>
    <p><%= @user.email %></p>
    <p><%= @user.bio %></p>
  </div>
</div>

<%= stylesheet_link_tag("post") %>
<div id="posts" class="text-center">
  <% @user.posts.each do |post| %>
  
    <% if post.user.id %>
            <%= render post %>
    <% end %>
  <% end %>
</div>

